<nav>
  <%= link_to t('views.actions.go_back'), root_path, class: 'btn btn-secondary' %>
</nav>

<main class='row'>
  <div class='col-md-12'>
    <header class='header'>
      <h1><%= t('views.resources.manufacturers.plural') %></h1>

      <p><%= t('views.resources.manufacturers.description') %></p>
    </header>

    <section class='contents'>
      <% if @manufacturers.empty? %>
        <p><%= t('views.resources.manufacturers.empty_resource') %></p>
      <% end %>

      <ol>
        <% @manufacturers.each do |manufacturer| %>
          <li>
            <h3>
              <%= link_to manufacturer.name, manufacturer %>
            </h3>
          </li>
        <% end %>
      </ol>
    </section>

    <div class='actions mt-4'>
        <%= link_to  t('views.actions.new'), new_manufacturer_path, class: 'btn btn-primary' %>
    </div>
  </div>
</main>
