<%= form_with model: @car_model, local: true do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :name, "Nome" %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :manufacturer_id, 'Fabricante' %>
  <%= f.collection_select :manufacturer_id, @manufacturers, :id, :name, {}, 
                          { class: 'form-control' } %>

  <%= f.label :car_category_id, 'Categoria de veículo' %>
  <%= f.collection_select :car_category_id, @car_categories, :id, :name, {}, 
                          { class: 'form-control' } %>

  <%= f.label :year, "Ano" %>
  <%= f.text_field :year, class: 'form-control' %>

  <%= f.label :metric_horsepower, "Potência" %>
  <%= f.text_field :metric_horsepower, class: 'form-control' %>

  <%= f.label :fuel_type, "Tipo de combustível" %>
  <%= f.text_field :fuel_type, class: 'form-control' %>

  <%= f.label :metric_city_milage, "Quilometragem na cidade" %>
  <%= f.number_field :metric_city_milage, class: 'form-control' %>

  <%= f.label :metric_highway_milage, "Quilometragem na estrada" %>
  <%= f.number_field :metric_highway_milage, class: 'form-control' %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
