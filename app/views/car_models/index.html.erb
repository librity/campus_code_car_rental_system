<nav>
  <%= link_to "Voltar", root_path, class: 'btn btn-secondary' %>
</nav>

<main class="row">
  <div class="col-md-12">
    <header class="header">
      <h1>Modelos de Veículos</h1>

      <p>Todos os modelos de veículos que oferecemos.</p>
    </header>

    <section class="contents">
      <% if @car_models.empty? %>
        <p>
          Nenhum modelo de veículos cadastrado
        </p>
      <% end %>

      <ol>
        <% @car_models.each do |car_model| %>
          <li>
            <h3>
              <%= link_to car_model.name, car_model %>
            </h3>
          </li>
        <% end %>
      </ol>
    </section>

    <div class="actions mt-4">
      <%= link_to "Registrar novo modelo de veículos", new_car_model_path, class: 'btn btn-primary' %>
    </div>
  </div>
</main>
