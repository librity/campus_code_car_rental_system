<nav>
  <%= link_to t('views.navigation.go_back'), root_path, class: 'btn btn-secondary' %>
</nav>

<main class='row'>
  <div class='col-md-12'>
    <header class='header'>
      <h1><%= t('activerecord.models.customer.other') %></h1>

      <p><%= t('views.resources.customers.description') %></p>
    </header>

    <section class='contents'>
      <% if @customers.empty? %>
        <p><%= t('views.resources.customers.empty_resource') %></p>
      <% end %>

      <table class="col index_table">
        <thead class="index_table_head">
          <tr class="index_table_row">
            <th><%= t('activerecord.attributes.customer.name') %></th>
            <th><%= t('activerecord.attributes.customer.cpf') %></th>
            <th></th>
          </tr>
        </thead>

        <tbody class="index_table_body">
          <% @customers.each do |customer| %>
            <tr class="index_table_row" id="customer-<%= customer.id %>">
              <td><%= customer.name %></td>
              <td><%= customer.formatted_cpf %></td>
              <td><%= link_to t('views.navigation.details'), customer, id: "details-#{customer.id}" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </section>

    <div class='actions mt-4'>
      <%= link_to  t('views.navigation.new'), new_customer_path, class: 'btn btn-primary' %>
    </div>
  </div>
</main>
