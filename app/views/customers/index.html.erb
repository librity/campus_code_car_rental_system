<nav>
  <%= link_to "Voltar", root_path, class: 'btn btn-secondary' %>
</nav>

<div class="row">
  <div class="col-md-12">
    <div class="header">
      <h1>Clientes</h1>

      <p>Todos os nosses clientes.</p>
    </div>

    <div class="contents">
      <% if @customers.empty? %>
        <p>
          Nenhum cliente cadastrado
        </p>
      <% end %>

      <ol>
        <% @customers.each do |customer| %>
          <li>
            <h3>
              <%= link_to customer.name, customer %>
            </h3>
          </li>
        <% end %>
      </ol>
    </div>

    <div class="actions mt-4">
      <%= link_to "Registrar novo cliente", new_customer_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>
