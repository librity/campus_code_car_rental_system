<nav>
  <%= link_to t('views.actions.go_back'), root_path, class: 'btn btn-secondary' %>
</nav>

<main class='row'>
  <div class='col-md-12'>
    <header class='header'>
      <h1><%= t('views.resources.customers.plural') %></h1>

      <p><%= t('views.resources.customers.description') %></p>
    </header>

    <section class='contents'>
      <% if @customers.empty? %>
        <p><%= t('views.resources.customers.empty_resource') %></p>
      <% end %>

      <ol>
        <% @customers.each do |customer| %>
          <li>
            <h3>
              <%= link_to customer.name, customer %>
            </h3>
          </li>
        <% end %>
      </ol>
    </section>

    <div class='actions mt-4'>
      <%= link_to  t('views.actions.new'), new_customer_path, class: 'btn btn-primary' %>
    </div>
  </div>
</main>
