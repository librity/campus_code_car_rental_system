<%= form_with model: @customer, local: true, class: 'user_form' do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class='form-group'>
    <%= f.label :name, t('activerecord.attributes.customer.name') %>
    <%= f.text_field :name, required: true, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :cpf, t('activerecord.attributes.customer.cpf') %>
    <%= f.text_field :cpf, required: true, class: ['form-control', 'cpf_input'] %>
  </div>

  <div class='form-group'>
    <%= f.label :email, t('activerecord.attributes.customer.email') %>
    <%= f.email_field :email, required: true, class: 'form-control' %>
  </div>

  <%= f.submit t('views.actions.send'), class: 'btn btn-primary' %>
<% end %>
