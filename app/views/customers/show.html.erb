<nav clas='col'>
  <%= link_to t('views.navigation.go_back'), customers_path, class: 'btn btn-secondary' %>
</nav>

<main class='row'>
  <div class='col-12'>
    <header class='header'>
      <h1> <%= @customer.name %> </h1>
    </header>

    <section class='contents row'>
      <aside class="col-3">
        <dl class="side_info_box">
          <dt><%= t('views.resources.customers.upcoming_rentals') %>:</dt>
          <% @upcoming_rentals.each do |rental| %>
            <dd><%= link_to l(rental.start_date), rental %> </dd>
          <% end %>
        </dl>

        <dl class="side_info_box">
          <dt><%= t('views.resources.customers.past_rentals') %>:</dt>
          <% @past_rentals.each do |rental| %>
            <dd><%= link_to l(rental.start_date), rental %> </dd>
          <% end %>
        </dl>
      </aside>
  
      <dl>
        <dt><%= t('activerecord.attributes.customer.email') %>:</dt>
        <dd> <%= @customer.email %> </dd>
        <dt><%= t('activerecord.attributes.customer.cpf') %>:</dt>
        <dd> <%= @customer.formatted_cpf %> </dd>
      </dl>
    </section>

    <div class='actions mt-4'>
      <%= link_to t('views.navigation.edit'), edit_customer_path(@customer), class: 'btn btn-primary' %>
      <%= link_to t('views.actions.delete'), @customer, method: :delete,
                  data: { confirm: t('views.messages.delete_resource', resource: @customer.name) },
                  class: 'btn btn-danger' %>
    </div>
  </div>
</main>
