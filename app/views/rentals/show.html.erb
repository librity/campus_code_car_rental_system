<nav clas='col'>
  <%= link_to t('views.navigation.go_back'), rentals_path, class: 'btn btn-secondary' %>
</nav>

<main class='row'>
  <div class='col-12'>
    <header class='header'>
      <h1> <%= t 'views.resources.rentals.show_header' %> <%= @rental.token %> </h1>
    </header>

    <section class='contents row'>
      <aside class="col-3">
        <dl class="side_info_box">
          <dt><%= t('activerecord.models.customer.one') %>:</dt>
          <dd><%= link_to @rental.customer.name, @rental.customer %> </dd>
          <dt><%= t('activerecord.attributes.customer.cpf') %>:</dt>
          <dd><%= @rental.customer.cpf %> </dd>
        </dl>

        <dl class="side_info_box">
          <dt><%= t('activerecord.models.car_category.one') %>:</dt>
          <dd><%= link_to @rental.car_category.name, @rental.car_category%> </dd>
          <dt><%= t('activerecord.attributes.car_category.daily_rate') %>:</dt>
          <dd> <%= number_to_currency(@rental.car_category.daily_rate) %> </dd>
          <dt><%= t('activerecord.attributes.car_category.insurance') %>:</dt>
          <dd> <%= number_to_currency(@rental.car_category.insurance) %> </dd>
          <dt><%= t('activerecord.attributes.car_category.third_party_insurance') %>:</dt>
          <dd> <%= number_to_currency(@rental.car_category.third_party_insurance) %> </dd>
        </dl>
      </aside>

      <dl>
        <dt><%= t('activerecord.attributes.rental.start_date') %>:</dt>
        <dd><%= l @rental.start_date %> </dd>
        <dt><%= t('activerecord.attributes.rental.end_date') %>:</dt>
        <dd><%= l @rental.end_date %> </dd>
      </dl>
    </section>

    <div class='actions mt-4'>
      <% if @rental.start_date >= Date.today  %>
        <%= link_to t('views.navigation.edit'), edit_rental_path(@rental), class: 'btn btn-primary' %>
        <%= link_to t('views.actions.delete'), @rental, method: :delete,
                    data: { confirm: t('views.messages.delete_resource', resource: @rental.token) },
                    class: 'btn btn-danger' %>
      <% end %>
    </div>
  </div>
</main>
