<header>
  <h1>Fabricantes</h1>

  <p>Todos os fabricantes de carros cadastrados na plataforma.</p>
</header>

<% if @subsidiaries.any? %>
  <ol>
    <% @subsidiaries.each do |subsidiary| %>
      <li>
        <h2>
          <%= link_to subsidiary.name, subsidiary %>
        </h2>
      </li>
    <% end %>
  </ol>
<% else %>
  <p>
    Nenhuma filial cadastrada
  </p>
<% end %>

<nav>
  <%= link_to "Registrar nova filial", new_subsidiary_path %>
   | 
  <%= link_to "Voltar", root_path %>
</nav>
