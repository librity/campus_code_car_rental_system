<nav>
  <%= link_to I18n.t('views.actions.go_back'), root_path, class: 'btn btn-secondary' %>
</nav>

<main class='row'>
  <div class='col-md-12'>
    <header class='header'>
      <h1><%= I18n.t('views.resources.subsidiaries.plural') %></h1>

      <p><%= I18n.t('views.resources.subsidiaries.description') %></p>
    </header>

    <section class='contents'>
      <% if @subsidiaries.empty? %>
        <p><%= I18n.t('views.resources.subsidiaries.empty_resource') %></p>
      <% end %>

      <ol>
        <% @subsidiaries.each do |subsidiary| %>
          <li>
            <h3>
              <%= link_to subsidiary.name, subsidiary %>
            </h3>
          </li>
        <% end %>
      </ol>
    </section>

    <div class='actions mt-4'>
      <%= link_to  I18n.t('views.actions.new'), new_subsidiary_path, class: 'btn btn-primary' %>
    </div>
  </div>
</main>
