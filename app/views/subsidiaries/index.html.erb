<header>
  <h1>Filiais</h1>

  <p>Todas as nossas filiais.</p>
</header>

<% if @subsidiaries.empty? %>
  <p>
    Nenhuma filial cadastrada
  </p>
<% end %>

<ol>
  <% @subsidiaries.each do |subsidiary| %>
    <li>
      <h3>
        <%= link_to subsidiary.name, subsidiary %>
      </h3>
    </li>
  <% end %>
</ol>

<nav>
  <li><%= link_to "Registrar nova filial", new_subsidiary_path %></li>
  <li><%= link_to "Voltar", root_path %></li>
</nav>
