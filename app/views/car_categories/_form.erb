<%= form_with model: @car_category, local: true do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class='form-group'>
    <%= f.label :name, t('activerecord.attributes.car_category.name') %>
    <%= f.text_field :name, required: true, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :daily_rate, t('activerecord.attributes.car_category.daily_rate') %>
    <%= f.number_field :daily_rate, min: 1, step: 0.01, required: true, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :insurance, t('activerecord.attributes.car_category.insurance') %>
    <%= f.number_field :insurance, min: 1, step: 0.01, required: true, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :third_party_insurance, t('activerecord.attributes.car_category.third_party_insurance') %>
    <%= f.number_field :third_party_insurance, min: 1, step: 0.01, required: true, class: 'form-control' %>
  </div>

  <%= f.submit t('views.actions.send'), class: 'btn btn-primary' %>
<% end %>
