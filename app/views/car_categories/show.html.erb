<nav clas='col'>
  <%= link_to t('views.actions.go_back'), car_categories_path, class: 'btn btn-secondary' %>
</nav>

<main class='row'>
  <div class='col-12'>
    <header class='header'>
      <h1> <%= @car_category.name %> </h1>
    </header>

    <section class='contents'>
      <dl>
        <dt><%= t('views.labels.daily_rate') %>:</dt>
        <dd> <%= number_to_currency(@car_category.daily_rate) %> </dd>
        <dt><%= t('views.labels.insurance') %>:</dt>
        <dd> <%= number_to_currency(@car_category.insurance) %> </dd>
        <dt><%= t('views.labels.third_party_insurance') %>:</dt>
        <dd> <%= number_to_currency(@car_category.third_party_insurance) %> </dd>
      </dl>
    </section>

    <div class='actions mt-4'>
      <%= link_to t('views.actions.edit'), edit_car_category_path(@car_category), class: 'btn btn-primary' %>
      <%= link_to t('views.actions.delete'), @car_category, method: :delete, 
                  data: { confirm: t('messages.delete_resource', resource: @car_category.name) },
                  class: 'btn btn-danger' %>
    </div>
  </div>
</main>
